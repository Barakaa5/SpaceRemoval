	<div class="mainApp">
		<h2>Space Removal</h2>
		<textarea id="myTextArea" class="block" rows="10" cols="100" value="asdasd"></textarea>
		<div class="buttonArea">
			<button onclick="myFunction()" id="btn" class="btn btn-success block">Fix Me!</button>
