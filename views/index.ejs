<%- include('partials/header'); %>

<div class="container">
    <div class="mainApp">
        <div class="row">
            <div class="col">
                <h2>Space Removal</h2>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <textarea dir="rtl" id="myTextArea" class="block" rows="10" cols="100"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col buttonArea">
                <button onclick="myFunction()" id="btn" class="btn btn-success block">
                    Delete Unnecessary Spaces
                </button>
            </div>
        </div>
    </div>
</div>

<script>
function myFunction(){
	var text = document.getElementById('myTextArea').value;
	var textArray = text.split("");
	console.log(text);
	
	//Handle all space with this symbols: .,!?:
	for(var i = 0; i <= textArray.length; i++ ){
		if(textArray[i] == " " & (textArray[i+1]  == "." || textArray[i+1]  == "," || textArray[i+1]  == ":" || 
								  textArray[i+1]  == '?' || textArray[i+1]  == '!'))
		{
			textArray[i] = "";
		}
	}	
	//Handle all space with this symbols: .,!?:
	
	//Handle all space with " symbol.
	let first = false;
	for(var i = 0; i <= textArray.length; i++ ){
		if(textArray[i] == '"'){
			first = !first;
			if(first & textArray[i+1] == " "){
				textArray[i+1] = "";
			}
			else if(textArray[i-1] == " "){
				textArray[i-1] = "";
			}	
		}
	}	
	//Handle all space with " symbol.
	
	var finalText = textArray.join("");
	document.getElementById('myTextArea').value = finalText;
}
	
	
	

</script>

